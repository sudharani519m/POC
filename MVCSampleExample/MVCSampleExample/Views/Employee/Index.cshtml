        .table{
            border-collapse:collapse;
            width:80%;
            margin:20px;

        }

        th, td{
            border:1px solid;
            padding:10px;
        }
    </style>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
